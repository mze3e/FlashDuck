modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["arrow-cpp", "glibcLocales", "openssl", "pkg-config", "redis"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Redis Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FlashDuck Demo"

[[workflows.workflow]]
name = "Redis Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --bind 0.0.0.0 --port 6379 --protected-mode no"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "FlashDuck Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd example && PYTHONPATH=/home/runner/workspace:$PYTHONPATH STREAMLIT_DISABLE_EMAIL_OPT_IN=true streamlit run app.py --server.port 5000 --server.headless true"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3000
